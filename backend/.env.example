# Database connection string - Use PostgreSQL from Render, Supabase, or other provider
DATABASE_URL=postgresql://user:password@host:5432/database

# Server port
PORT=3000

# Environment
NODE_ENV=production

# JWT Secret - Generate a secure random string
JWT_SECRET=your-super-secret-key-change-this-in-production

# Frontend URL - Update this with your Vercel deployment URL
FRONTEND_URL=https://your-app.vercel.app

# Frontend Menu URL - This is where QR codes will redirect users to
FRONTEND_MENU_URL=https://your-app.vercel.app/menu
